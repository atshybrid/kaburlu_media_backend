###############################################################
# Kaburlu Media Backend - Environment Template (.env.example) #
# Copy to .env and fill in real secrets. DO NOT COMMIT .env.    #
###############################################################

# ---------------- Core Runtime ----------------
NODE_ENV=development # or staging | production
PORT=3001
BASE_URL=http://localhost:3000
MULTI_TENANCY=true

# ---------------- Domains (optional overrides) ----------------
DEV_DOMAIN=http://localhost:3000
STAGING_DOMAIN=https://staging.example.com
PROD_DOMAIN=https://app.example.com
# CANONICAL_DOMAIN=https://canonical.example.com
# EXTRA_DOMAIN=https://extra.example.com

# ---------------- Database ----------------
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME?sslmode=require
# Optional local fallback while remote DB is unreachable
# PRISMA_PREFER_FALLBACK=false
# DATABASE_URL_FALLBACK=postgresql://postgres:postgres@localhost:5432/kaburlu_local

# ---------------- Auth ----------------
JWT_SECRET=replace_me_change_in_prod
JWT_REFRESH_SECRET=replace_me_refresh_change_in_prod

# ---------------- AI Provider Selection ----------------
# Primary provider: gemini | openai
AI_PROVIDER=gemini
AI_USE_GEMINI=true
AI_USE_OPENAI=false
AI_ENABLE_SEO=true
AI_ENABLE_MODERATION=true
AI_ENABLE_TRANSLATION=true
AI_TIMEOUT_MS=12000

# ---------------- Gemini ----------------
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL_SEO=gemini-1.5-flash
GEMINI_MODEL_MODERATION=gemini-1.5-flash
GEMINI_MODEL_TRANSLATION=gemini-1.5-pro

# ---------------- OpenAI ----------------
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL_SEO=gpt-4o-mini
OPENAI_MODEL_MODERATION=gpt-4o-mini
OPENAI_MODEL_TRANSLATION=gpt-4o-mini

# ---------------- Firebase (choose ONE auth method) ----------------
# Method A: Path to service account JSON (preferred in container / CI)
FIREBASE_CREDENTIALS_PATH=./secrets/service-account.json
# Method B: Inline credentials (escape newlines as \n)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMULTI\nLINE\nKEY\n-----END PRIVATE KEY-----\n"

# ---------------- Google OAuth (optional) ----------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ---------------- Cloudflare R2 ----------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=kaburlu
R2_PUBLIC_BASE_URL=https://public-bucket-url.example.com
R2_ENDPOINT=

# ---------------- Youtube (optional) ----------------
YOUTUBE_API_KEY=

# ---------------- SEO Config ----------------
SEO_PUBLISHER_NAME=Kaburlu
SEO_PUBLISHER_LOGO=https://example.com/logo.png

# ---------------- Slug Config ----------------
SLUG_REQUIRE_UNIQUE=true

# ---------------- Feature Flags (future) ----------------
# ENABLE_MODERATION_QUEUE=true
# ENABLE_MESSAGE_READ_RECEIPTS=false

# ---------------- Misc ----------------
# Add any additional environment-specific overrides below.

# END OF FILE